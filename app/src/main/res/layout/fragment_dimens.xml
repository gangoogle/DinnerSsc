<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="细分市场"
                android:textColor="@color/colorBlackA"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_title"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tv_title"
                android:text="Top3"
                android:textColor="@color/coloryellow"
                android:textSize="14sp"/>

            <com.butter.dinnerssc.ui.customview.AnnularView
                android:id="@+id/aa_view"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/tv_title"
                android:layout_centerVertical="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/aa_view"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/aa_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="前驱走势"
                    android:textColor="@color/colorDarkB"/>

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="个位"
                    android:textColor="@color/colorDarkB"/>

                <TextView
                    android:id="@+id/tv_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="百位"
                    android:textColor="@color/colorDarkB"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_chart"
                android:background="@color/colorDeepBlue"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/aa_view"
                android:gravity="center"
                android:text="走势图->"
                android:textSize="18sp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>