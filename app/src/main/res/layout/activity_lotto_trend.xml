<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
   >

    <com.butter.yapplet.caiyi.ui.LottoTrendView
        android:id="@+id/ltv_trendView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@android:color/white" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:backgroundTint="@color/white"
        app:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ltv_trendView"
        app:layout_constraintStart_toStartOf="@+id/ltv_trendView"
        app:rippleColor="@color/whitesmoke"
        app:srcCompat="@drawable/ic_arrow_back_bb_24dp" />
</android.support.constraint.ConstraintLayout>
